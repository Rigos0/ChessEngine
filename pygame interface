def board():
    size = 49
    x = 200
    y = 150
    for s in range(4):
        for i in range(4):
            pygame.draw.rect(screen, brown, (x,y,size,size))
            x += 50
            pygame.draw.rect(screen, skin, (x,y,size,size))
            x += 50
        x = 200
        y += 100

    x = 200
    y = 100
    for v in range(4):
       for i in range(4):
            pygame.draw.rect(screen, skin, (x,y,size,size))
            x += 50
            pygame.draw.rect(screen, brown, (x,y,size,size))
            x += 50
       x = 200
       y += 100
  
       
