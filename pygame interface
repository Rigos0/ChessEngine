import pygame
import time

pygame.init()

def get_square(x,y):
    ranks = ["1","2","3","4","5","6","7","8"]
    files = ["a","b""c","d","e","f","g","h",]
    
    counter = 0
    counter2 = 0
    for i in range(8):
        if counter < y < counter + 50:
            rank = ranks[counter2]
            break
        else: 
            counter += 50
            counter2 += 1
    for i in range(8):
        if 50 + counter < x < counter + 100:
            file = files[counter2]
            break
        else: 
            counter += 50
            counter2 += 1
    print("the square is: ",file+rank)
        


    
    


